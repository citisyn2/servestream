<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>

    <SurfaceView android:id="@+id/surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    />

	<RelativeLayout
		android:id="@+id/media_controller_group"
		android:layout_width="fill_parent"
		android:layout_height="80dip"
		android:layout_alignParentBottom="true"
		android:padding="5dip"
		android:background="#525152"
		>

		<Button
			android:id="@+id/previous_button"
			android:paddingRight="1dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/seek_backward_button"
			android:layout_alignParentTop="true"
			android:background="@drawable/previous_button"
			/>

		<Button
			android:id="@+id/seek_backward_button"
			android:paddingRight="1dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/play_pause_button"
			android:layout_alignParentTop="true"
			android:background="@+drawable/seek_backward_button"
			/>

		<Button
			android:id="@+id/play_pause_button"
			android:paddingRight="1dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"  
			android:layout_alignParentTop="true"
			android:background="@+drawable/pause_button"
			/>
			
		<Button
			android:id="@+id/seek_forward_button"
			android:paddingRight="1dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/play_pause_button"
			android:layout_alignParentTop="true"
			android:background="@+drawable/seek_forward_button"
			/>
			
		<Button
			android:id="@+id/next_button"
			android:paddingRight="1dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/seek_forward_button"
			android:layout_alignParentTop="true"
			android:background="@drawable/next_button"
			/>
        
            <TextView android:id="@+id/position_text"
            	android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
            	android:layout_below="@+id/previous_button"
            />
            
             <RelativeLayout
             	android:paddingLeft="2dip"
             	android:paddingRight="2dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/position_text"
				android:layout_toLeftOf="@+id/duration_text"
				android:layout_below="@+id/previous_button"
				android:layout_alignTop="@+id/position_text"
				android:background="#525152"
				>
                
                <SeekBar android:id="@+id/seek_bar"
                	android:layout_width="fill_parent" 
                    android:layout_height="wrap_content"
                />
                
           	</RelativeLayout>
              
            <TextView android:id="@+id/duration_text"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
            	android:layout_below="@+id/next_button"
            />

	</RelativeLayout>

</RelativeLayout>
