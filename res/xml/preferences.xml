<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<ListPreference
		android:key="update"
		android:title="@string/pref_update_title"
		android:summary="@string/pref_update_summary"
		android:entries="@array/list_update"
		android:entryValues="@array/list_update_values"
		android:defaultValue="Daily"
		/>

	<PreferenceCategory
		android:title="@string/pref_playback_category">
	
		<ListPreference
			android:key="repeat"
			android:title="@string/pref_repeat_title"
			android:summary="@string/pref_repeat_summary"
			android:entries="@array/list_repeat"
			android:entryValues="@array/list_repeat_values"
			android:defaultValue="Off"
		/>

	</PreferenceCategory>

</PreferenceScreen>
